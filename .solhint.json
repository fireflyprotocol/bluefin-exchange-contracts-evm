{
  "extends": [
    "solhint:recommended"
  ],
  "rules": {
    "compiler-version": [
      "error",
      "^0.8.4"
    ],
    "func-visibility": [
      "warn",
      {
        "ignoreConstructors": true
      }
    ],
    "prettier/prettier": "error",
    "avoid-throw": "off",
    "avoid-suicide": "error",
    "avoid-sha3": "warn",
    "reason-string": "off",
    "not-rely-on-time": "off",
    "avoid-low-level-calls": "off",
    "func-name-mixedcase": true,
    "var-name-mixedcase": false,
    "no-unused-vars": "off"     
  },
  "plugins": [
    "prettier"
  ]
}