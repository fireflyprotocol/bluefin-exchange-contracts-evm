    "@typechain/ethers-v5": "^6.0.4",
    "chai-as-promised": "^7.1.1",
    "chai-bignumber": "^3.0.0",
    "dotenv": "^16.0.3",
    "eslint-plugin-chai-friendly": "^0.7.2",
    "ganache-cli": "^6.12.2",
    "hardhat-typechain": "^0.3.5",
    "mocha": "^10.0.0",
    "prettier": "^2.6.2",
